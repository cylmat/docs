{
    "console": "integratedTerminal",
    "debug.internalConsoleOptions": "neverOpen",
    "editor.bracketPairColorization.enabled": true,
    "editor.codeActionsOnSave": {},
    "editor.fontFamily": "JetBrains Mono, FiraCode Nerd Font, Fira Code, Consolas, Courier New, monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 14,
    "editor.fontWeight": "300",
    "editor.guides.bracketPairs": true,
    "editor.letterSpacing": 1,
    "editor.lineHeight": 20,
    "editor.linkedEditing": true, // Auto-rename tags
    "editor.renderWhitespace": "all",
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "on",

    // @https://www.alveeakand.com/how-to-modify-themes-in-vscode
    // (optional) "editor.semanticHighlighting.enabled": false, 
    // get attributes with "Developer Inspect Editor Tokens And Scope"
    "editor.tokenColorCustomizations": {
        // global
        "textMateRules": [
            {
                "scope": [
                    "comment",
                    "constant.language",
                    "keyword.control",
                    "storage.modifier", 
                    "storage.type", 
                    "string.quoted.double",
                    "string.quoted.single"
                ],
                "settings": {
                    "fontStyle": "italic"
                }
            }
        ],
        // specific theme
        "[Default Dark Modern]": {
            "textMateRules": [{
                // Change color of php attributes
                "scope": "meta.attribute.php",
                "settings": {
                    "foreground": "#6a6",
                    "fontStyle": "italic"
                }
            }]
        },
    },
    "files.eol": "\n",
    "files.autoSave": "afterDelay",
    "files.associations": {
        "*.cnf": "properties"
    },
    "git.terminalAuthentication": false,
    "git-graph.contextMenuActionsVisibility": {},
    "git-graph.defaultColumnVisibility": {
        "Author": true,
        "Commit": true,
        "Date": true
    },
    "intelephense.files.exclude": [
        "**/.DS_Store/**",
        "**/.git/**",
        "**/.hg/**",
        "**/.history/**",
        "**/.svn/**",
        "**/bower_components/**",
        "**/cache/**",
        "**/CVS/**",
        "**/node_modules/**",
        "**/vendor/**/vendor/**",
        "**/vendor/**/{Tests,tests}/**"
    ],
    "php": {
        "files.exclude": {
            "**/.DS_Store": true,
            "**/.git": true,
            "**/.hg": true,
            "**/.svn": true,
            "**/.vscode": true,
            "**/cache": true,
            "**/docs": true,
            "**/node_modules": true,
            "**/upgrade": true,
            "**/uploads": true,
            "/var/www/var": true
        }
    },
    "php.suggest.basic": false,
    "phpGettersSetters.getterTemplate": "/root/.config/getter.js",
    "phpGettersSetters.setterTemplate": "/root/.config/setter.js",
    "search.useIgnoreFiles": false,
    "showOutput": "never",
    "symfony-vscode.phpExecutablePath": "/usr/local/bin/php",
    "sync.autoDownload": true,
    "sync.autoUpload": true,
    "sync.forceUpload": true,
    "sync.quietSync": true,
    "terminal.integrated.defaultProfile.windows": "Ubuntu (WSL)",
    "terminal.integrated.profiles.windows": {
        "Ubuntu (WSL)": {
            "args": [
                "-d",
                "Ubuntu-22.04"
            ],
            "path": "C:\\WINDOWS\\System32\\wsl.exe"
        },
        "PowerShell": {
            "icon": "terminal-powershell",
            "source": "PowerShell"
        }
    },
    "vim.commandLineModeKeyBindings": [],
    "vim.easymotion": true,
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-c>": false,
        "<C-f>": false,
        "<C-v>": false,
        "<C-x>": false,
        "<C-y>": false,
        "<C-z>": false
    },
    "vim.hlsearch": true,
    "vim.leader": "<Space>",
    "vim.normalModeKeyBindingsNonRecursive": [
        {
          "after": ["<C-r>"],
          "before": ["<Leader>", "r"]
        }
    ],
    "vim.smartRelativeLine": true,
    "vim.sneak": true,
    "vim.startInInsertMode": true,
    "vim.statusBarColors.easymotionmode": "",
    "vim.statusBarColorControl": true,
    "workbench.colorCustomizations": {
        "editorUnnecessaryCode.border": "#dd7aab",
        "editorUnnecessaryCode.foreground": "#dd7aab"
    }
}
